# Global aliases
alias ~="cd ~" # -> Home
alias b='cd -' # -> Previous directory

alias l='ls -al'

# Grep some text from an ls -al output
function lookup {
	ls -al $1 | grep $2
}
alias f='lookup'

# Reloads the bash configuration
function reload_env {
	source ~/.bashrc
}
alias r=reload_env

# Generic way to edit files
# In order of:
# - TextMate
# - Nano
# - Notepad
function generic_edit {
	
	if type -P mate &>/dev/null; then
	    mate $1
	elif type -P nano >/dev/null; then
	    nano $1
	elif type -P notepad >/dev/null; then
		notepad $1
	fi
}
alias e=generic_edit


# Make it easier to add a new alias
function new_alias {
	if edit ~/bash/aliases; then
		reload
	fi
}
alias na=new_alias

#Top 10 commands
function t10 {
	history | awk '{print $2}' | awk 'BEGIN {FS="|"}{print $1}' | sort | uniq -c | sort -n | tail | sort -nr
}

###   Handy Extract Program
function extract {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1        ;;
            *.tar.gz)    tar xvzf $1     ;;
            *.bz2)       bunzip2 $1       ;;
            *.rar)       unrar x $1     ;;
            *.gz)        gunzip $1     ;;
            *.tar)       tar xvf $1        ;;
            *.tbz2)      tar xvjf $1      ;;
            *.tgz)       tar xvzf $1       ;;
            *.zip)       unzip $1     ;;
            *.Z)         uncompress $1  ;;
            *.7z)        7z x $1    ;;
            *)           echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
alias x=extract

#Include all other aliases
source ~/.bash/git


